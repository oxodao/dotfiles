set nu rnu
set ignorecase
set ideajoin
set smartcase
set so=10
set surround
let mapleader = " "

" Close & Re-open tab
nmap <leader>q :action CloseContent<cr>
nmap <leader>Q :action ReopenClosedTab<cr>

set highlightedyank

nnoremap <C-M-d> <C-x>
vnoremap <C-M-d> <C-x> gv
nnoremap <C-M-i> <C-a>
vnoremap <C-M-i> <C-a> gv
